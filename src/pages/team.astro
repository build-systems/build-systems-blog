---
import BaseLayout from "../layouts/BaseLayout.astro";
import PersonenCard from "../components/PersonenCard.astro";
import BlogCarousel from "../components/BlogCarousel/BlogCarousel.astro";
import { getAllPosts } from "../lib/notion/client";
import StickyLogoMessage from "../components/StickyLogoMessage.astro";

const title = "BuildSystems | Team";
const description =
  "Erfassen wir ökologische Anforderungen auf allen Ebenen und und betrachten die Gesamtwirkung der Maßnahmen zur Emissionsreduktion durch die sozioökonomische Perspektive.";
const image = "/images/buildsystems-team.jpg";
const imageAlt = "BuildSystems team working";

const posts = await getAllPosts();
---

<BaseLayout
  title={title}
  description={description}
  image={image}
  imageAlt={imageAlt}
>
  <div class="frame msg-secondary primary-margin-top">
    <h3>
      Wir vertreten nicht nur einen integralen Prozess in der Planung, wir leben
      Interdisziplinarität im Team: Jeder bringt einen Baustein der
      ganzheitlichen Betrachtung mit ein. Gemeinsam erfassen wir ökologische
      Anforderungen auf allen Ebenen und betrachten die Gesamtwirkung der
      Maßnahmen zur Emissionsreduktion durch die sozioökonomische Perspektive.
    </h3>
  </div>
  <StickyLogoMessage>
    <h2>führt Kompetenzen, Prozesse und Tools zusammen.</h2>
  </StickyLogoMessage>

  <div class="frame cards-container">
    <PersonenCard
      imagePath="/src/assets/martin-bittmann.png"
      name="Martin Bittmann"
      title="Dipl.-Ing. Architekt"
      description="Berater der Bay. Architektenkammer (BEN), Energieeffizienz-Experte, DGNB Consultant, Nachhaltiges Bauen, Energetische Betrachtungen, Projektmanagement & -entwicklung"
      linkedin="https://www.linkedin.com/in/martin-bittmann/"
    />
    <PersonenCard
      imagePath="/src/assets/julia-dorn.png"
      name="Julia Dorn"
      title="M.Sc. Urban Design, B.Sc. Architektur"
      description="DGNB Consultant und ESG Manager, Urbane Transformation, EU Taxonomie und Nachhaltigkeitsreporting, Kommunikation, Akteursmanagement & Moderation"
      linkedin="https://www.linkedin.com/in/julia-j-dorn/"
    />
    <PersonenCard
      imagePath="/src/assets/daniel-dieren.jpg"
      name="Daniel Dieren"
      title="M.Sc. Bauingenieur, M.Sc. Architektur"
      description="Energieeffizienz-Experte, Nachhaltiges Konstruieren, Ingenieurholzbau, Integrale Planung, Dekarbonisierung, LCA/LCC, Zirkuläres Bauen"
      linkedin="https://www.linkedin.com/in/daniel-dieren-48a765116/"
    />
    <PersonenCard
      imagePath="/src/assets/daniel-locatelli.png"
      name="Daniel Locatelli"
      title="M.Sc. ITECH, Dipl. Architektur"
      description="Fullstack softwareentwicklung, Computational Design, Entwicklung digitaler Tools und Workflows"
      linkedin="https://www.linkedin.com/in/daniel-locatelli/"
    />
    <PersonenCard
      imagePath="/src/assets/tunca-beril.jpeg"
      name="Tunca Beril Basaran"
      title="B.Sc. Regional Planning, B.Sc. Sociology, M.Sc. Urban Design"
      description="Zirkuläre Systeme und Urban Mining, Workshops und Strategieentwicklung, Social Impact zukunftsfähiges Bauen"
      linkedin="https://www.linkedin.com/in/tunca-beril-basaran-a3580a147"
    />
    <PersonenCard
      imagePath="/src/assets/ulrich-kneisl.png"
      name="Ulrich Kneisl"
      title="M.A. Architektur"
      description="Sozial-ökologische Transformation im Wohnungsbau, Bauen im Bestand, Intersektionalität im gebauten Umfeld, Systemische Ansätze für die Bauwende"
      linkedin="https://www.linkedin.com/in/ulrich-kneisl-292a60130/"
    />
    <PersonenCard
      imagePath="/src/assets/katrin-schwarz.png"
      name="Katrin Schwarz"
      title="Dipl. Ing. Architektur"
      description="Advisor: Immobilien-Projektentwicklerin (EBS), ESG Reporting, Taxonomie-Konformität, Klimarisikoanalyse, Nachhaltige Projektentwicklung und Projektsteuerung"
      linkedin="https://www.linkedin.com/in/katrin-schwarz-b57b0322b/"
    />
    <PersonenCard
      imagePath="/src/assets/andreas-thoma.png"
      name="Andreas Thoma"
      title="M.Sc. Architektur"
      description="Advisor: Prozessoptimierung, Computational Design, Digitale Fabrikation, Parametrische Systeme"
      linkedin="https://www.linkedin.com/in/andreas-thoma/"
    />
  </div>
  <BlogCarousel posts={posts} />
</BaseLayout>

<style>
  .cards-container {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 0.5rem;
    z-index: 2;
    margin-bottom: 20svh;
  }

  @media (max-width: 1280px) {
    .cards-container {
      margin-left: 5%;
      margin-right: 5%;
    }
  }

  @media (max-width: 920px) {
    .cards-container {
      grid-template-columns: repeat(1, minmax(0, 1fr));
    }
  }
</style>
