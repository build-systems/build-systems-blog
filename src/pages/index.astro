---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION, SITE_PERMALINK } from "../consts";
---

<BaseLayout
  title={SITE_TITLE}
  description={SITE_DESCRIPTION}
  permalink={SITE_PERMALINK}>
  <div class="home-container">
    <div class="home-copy">
      <h1>BuildSystems Blog</h1>
      <p>
        Welcome to <a
          href="https://buildsystems.de/"
          target="_blank"
          rel="noopener"
          >BuildSystems</a
        > blog. This is the place where we will keep you informed about the latest news, regulations, fundings and everything
        related to the real estate in Germany.
      </p>
    </div>

    <div class="hero-image-container">
      <picture>
        <source
          srcset="/public/coverRendering.webp"
          media="(min-width: 600px)"
        />
        <img
          class="hero-image"
          alt="Rendering of a multi-story timber building"
          src="/public/coverRendering.webp"
        />
      </picture>
    </div>
  </div>
</BaseLayout>

<style>
  .home-container {
    align-items: center;
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 2em 0;
    min-height: 400px;
  }

  .home-copy {
    flex: 1;
    padding: 0 1em;
  }

  .home-copy h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    line-height: 1.3;
  }

  .home-copy p {
    font-size: 1.4em;
  }

  .hero-image-container {
    margin: 0 1em;
    text-align: center;
  }

  .hero-image-container picture {
    display: block;
    min-height: 250px;
    & img {
    border-radius: 2rem;
    }
  }

  .caption {
    font-size: 0.8em;
    font-style: italic;
    text-align: left;
  }

  .hero-image {
    width: 100%;
    max-width: 550px;
    margin-bottom: 1em;
  }

  @media (max-width: 1200px) {
    p {
      font-size: 1.2em;
    }

    .hero-image {
      max-width: 400px;
    }
  }

  @media (max-width: 800px) {
    .home-container {
      flex-direction: column;
    }

    .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }
  }
</style>
