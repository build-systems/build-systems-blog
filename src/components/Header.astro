import Nav from './Nav.astro'

const { current = '' } = Astro.props;
---

<style>
  header {
    position: absolute;
    top: 0;
    left: 0;
    margin: 0 auto;
    /* max-width: 1400px; */
    padding: 2em;
    width: 100%;
  }

</style>

<header>
  <Logo />
  <Nav current={current} />
</header>