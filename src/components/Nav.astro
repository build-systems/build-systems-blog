---
const { current = "" } = Astro.props;
---

<nav>
  <div class="options">
    <a aria-label="Go to Homepage" href="/" data-astro-prefetch>Home</a>
    <a aria-label="Go to Services page" href="/services" data-astro-prefetch
      >Services</a
    >
    <a aria-label="Go to Workshops page" href="/workshops" data-astro-prefetch
      >Workshop</a
    >
    <a aria-label="Go to Team page" href="/team" data-astro-prefetch>Team</a>
    <a aria-label="Go to Our Work page" href="/ourwork" data-astro-prefetch
      >Our Work</a
    >
    <a aria-label="Go to Toolbox page" href="/toolbox" data-astro-prefetch
      >Toolbox</a
    >
    <!-- <a aria-label="Go to blog page" href="/blog">Blog</a> -->
  </div>
  <input type="checkbox" id="menu" class="checkbox visuallyHidden" />
  <label for="menu">
    <div aria-label="Hamburguer menu" class="hamburger">
      <svg width="36" height="36">
        <circle cx="18" cy="18" r="17" fill="#D9D9D9"></circle>
        <line
          x1="10"
          y1="13"
          x2="26"
          y2="13"
          stroke="#222"
          stroke-width="2"
          class="line01"></line>
        <line
          x1="10"
          y1="18"
          x2="26"
          y2="18"
          stroke="#222"
          stroke-width="2"
          class="line02"></line>
        <line
          x1="10"
          y1="23"
          x2="26"
          y2="23"
          stroke="#222"
          stroke-width="2"
          class="line03"></line>
      </svg>
    </div>
  </label>
</nav>

<style>
  nav {
    position: fixed;
    display: flex;
    top: 0;
    right: 0;
    padding: 0.8rem 1rem;
    z-index: 4;
  }

  label {
    border-radius: 50%;
    height: 36px;
    outline-radius: 50%;
  }

  .hamburger {
    display: flex;
    margin-left: 0;
    cursor: pointer;
    outline-radius: 50%;
    svg {
      outline-radius: 50%;
    }
  }

  line {
    transition: all 0.2s ease-in-out;
    -webkit-transition: all 0.2s ease-in-out;
    transform-origin: center;
  }

  .checkbox:checked + label > .hamburger > svg > .line01,
  .checkbox:checked + label > .hamburger > svg > .line03 {
    opacity: 0;
  }

  .checkbox:checked + label > .hamburger > svg > .line02 {
    transform: rotate(90deg);
    -webkit-transform: rotate(90deg);
  }

  .options {
    /* opacity: 0; */
    display: flex;
    flex-direction: column;
    align-items: end;
    gap: 3px;
    transform: translate(-5px, -250px);
    -webkit-transform: translate(-5px, -250px);
    transition: all 0.3s ease-in-out;
    -webkit-transition: all 0.3s ease-in-out;
  }

  a {
    counter-increment: option;
    display: flex;
    justify-content: start;
    background: var(--text-main);
    color: var(--background-body);
    font-family: var(--font-family-secondary);
    font-size: 1.2rem;
    border-radius: 4px;
    padding: 4px 15px;
    text-decoration: none;
    height: 36px;
    width: 100%;
  }

  .options:has(~ .checkbox:checked) {
    transform: translate(-5px, 0);
    -webkit-transform: translate(-5px, 0);
  }

  @media (max-width: 420px) {
    a {
      font-size: 1rem;
      border-radius: 4px;
      padding: 2px 10px;
      text-decoration: none;
      height: 30px;
    }
  }
</style>
