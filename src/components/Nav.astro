---
const { current = "" } = Astro.props;
---

<nav>
  <div class="options">
    <a href="/">Start</a>
    <a href="/services">Services</a>
    <a href="/personen">Personen</a>
    <a href="/blog">Blog</a>
  </div>
  <input
    type="checkbox"
    id="checkbox"
    class="checkbox visuallyHidden"
  />
  <label for="checkbox">
    <div class="hamburger">
      <svg
        width="36"
        height="36">
        <circle
          cx="18"
          cy="18"
          r="17"
          fill="#D9D9D9"
        ></circle>
        <line
          x1="10"
          y1="13"
          x2="26"
          y2="13"
          stroke="#222"
          stroke-width="2"
          class="line01"
        ></line>
        <line
          x1="10"
          y1="18"
          x2="26"
          y2="18"
          stroke="#222"
          stroke-width="2"
          class="line02"
        ></line>
        <line
          x1="10"
          y1="23"
          x2="26"
          y2="23"
          stroke="#222"
          stroke-width="2"
          class="line03"
        ></line>
      </svg>
    </div>
  </label>
</nav>

<style>
  nav {
    position: fixed;
    display: flex;
    top: 0;
    right: 0;
    padding: 0.8rem 1rem;
    z-index: 3;
  }

  label {
    border-radius: 50%;
    background-color:transparent;
  }

  label:active {
    background-color:transparent;
  }

  .hamburger {
    display: flex;
    margin-left: 5px;
    cursor: pointer;
  }

  line {
    transition: all 0.2s ease-in-out;
    transform-origin: center;
  }

  .checkbox:checked + label > .hamburger > svg > .line01,
  .checkbox:checked + label > .hamburger > svg > .line03 {
    opacity: 0;
  }

  .checkbox:checked + label > .hamburger > svg > .line02 {
    transform: rotate(90deg);
  }

  .options {
    /* opacity: 0; */
    display: flex;
    flex-direction: column;
    align-items: end;
    gap: 3px;
    transform: translate(0, -200px);
    transition: all 0.3s ease-in-out;
  }

  a {
    counter-increment: option;
    display: flex;
    justify-content: center;
    background: var(--text-main);
    color: var(--background-body);
    font-family: var(--font-family-secondary);
    font-size: 1.2rem;
    border-radius: 4px;
    padding: 4px 15px;
    text-decoration: none;
    height: 36px;
  }

  /* .options a::before {
    content: ccounter(option);
  } */

  .options:has(~ .checkbox:checked) {
    /* opacity: 1; */
    transform: translate(0, 0);
  }
</style>