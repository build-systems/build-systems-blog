---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import type { PartnerCard } from "../lib/notion-interfaces";
import { getPhotoPath } from "../lib/blog-helpers";

interface Props {
  item: PartnerCard;
  showDescription?: boolean;
  sizeImage?: number;
}

const { item, showDescription = true, sizeImage = 140 } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/notion/**/*.{jpeg,jpg,png,tiff,webp,gif,svg,avif}"
);

const imagePath = getPhotoPath(item.Photo?.Url!);

if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,tiff,webp,gif,svg,avif}"`,
    {
      cause: "Make sure to run build so the images are downloaded from Notion.",
    }
  );

const name = item.Name;
const description = item.Description;
const linkedin = item.LinkedIn;
const website = item.Website;
---

<div
  class="flex flex-col items-center rounded-lg bg-[var(--background-cards)] p-6 sm:flex-row sm:items-start lg:rounded-xl lg:px-8 lg:py-4"
>
  <Image
    class="flex items-center justify-center max-w-fit"
    src={images[imagePath]()}
    alt={name + "'s profile photo"}
    widths={[200, 500]}
    sizes={`(max-width: 200px) 200px, (max-width: 500px) 500px`}
    style=`width: ${sizeImage}px; height: ${sizeImage}px;`
  />
  <div class="text">
    <h3>{name}</h3>
    {showDescription && <h5>{description}</h5>}
    <div class="flex">
      {
        linkedin != undefined && linkedin.pathname.length > 0 && (
          <a
            href={linkedin}
            target="_blank"
            aria-label={"Check " + name + " on LinkedIn"}
          >
            <svg class="icon">
              <use xlink:href="/assets/icons.svg#linkedin" />
            </svg>
          </a>
        )
      }
      {
        website && website.pathname.length > 0 && (
          <a
            href={website}
            target="_blank"
            aria-label={"Check " + name + " website."}
          >
            <svg class="icon">
              <use xlink:href="/assets/icons.svg#planet" />
            </svg>
          </a>
        )
      }
    </div>
  </div>
</div>

<style>
  .card {
    padding: 1rem 2rem;
    align-items: center;
    display: flex;
    background-color: var(--background-cards);
    border-radius: 1rem;
  }

  .text {
    margin-left: 2rem;
  }

  h3 {
    margin-top: 0;
    margin-bottom: 0;
  }

  h4 {
    font-size: 1.2rem;
  }

  .icon {
    fill: var(--text-main);
    width: 18px;
    height: 18px;
    color: white;
  }

  a {
    text-decoration: none;
  }

  a + a {
    margin-left: 0.5rem;
  }

  @media (max-width: 1280px) {
    .card {
      padding: 1.5rem;
      border-radius: 0.8rem;
    }

    .image {
      width: 8rem;
      height: 8rem;
    }

    .text {
      margin-left: 0.8rem;
    }

    h3 {
      font-size: 1.4rem;
    }

    h4 {
      font-size: 1.2rem;
    }

    h5 {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 640px) {
    h5 {
      hyphens: auto;
    }
  }

  @media (max-width: 420px) {
    .card {
      flex-direction: column;
      align-items: center;
    }
    .text {
      margin: 1rem 0;
      text-align: start;
    }
  }
</style>
