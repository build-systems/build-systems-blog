---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  name: string;
  title: string;
  description: string;
  imagePath: string;
  linkedin?: string;
}

const { name, title, description, imagePath, linkedin } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>("/src/assets/*.{jpeg,jpg,png,gif}");
if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`);
---

<div class="card">
  <Image
    class="image"
    src={images[imagePath]()}
    alt={name + "'s profile photo"}
  />
  <div class="text">
    <h3>{name}</h3>
    <h4>{title}</h4>
    <h5>{description}</h5>
    {
      linkedin != undefined && (
    <a
      href={linkedin}
      target="_blank"
      aria-label={"Reach out to " + name + " on LinkedIn"}>
      <svg class="icon">
        <use xlink:href="/assets/icons.svg#linkedin"></use>
      </svg>
    </a>
    )
    }
  </div>
</div>

<style>
  .card {
    padding: 1rem 2rem;
    display: flex;
    background-color: var(--background-cards);
    border-radius: 1rem;
  }

  .image {
    width: 9rem;
    height: 9rem;
    border-radius: 50%;
  }

  .text {
    margin-left: 2rem;
  }

  h3 {
    margin-top: 0;
    margin-bottom: 0;
  }

  .icon {
    fill: var(--text-main);
    width: 20px;
    height: 20px;
  }

  @media (max-width: 1280px) {
    .card {
      padding: 1.5rem;
      border-radius: 0.8rem;
    }

    .image {
      width: 8rem;
      height: 8rem;
    }

    .text {
      margin-left: 0.8rem;
    }

    h3 {
      font-size: 1.4rem;
    }

    h4 {
      font-size: 1.2rem;
    }

    h5 {
      font-size: 1.1rem;
    }
  }
  @media (max-width: 420px) {
    .card {
      flex-direction: column;
      align-items: center;
    }
    .text {
      margin: 1rem 0;
      text-align: center;
    }
  }
</style>
